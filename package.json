{
  "name": "cabin_reservation_app",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently -n backend,frontend -c blue,green \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "tsx watch src/backend/server.new.ts",
    "dev:frontend": "vite --config vite.config.ts",
    "build": "vite build --config vite.config.ts",
    "start": "NODE_ENV=production node --import tsx src/backend/server.new.ts",
    "preview": "npm run build && npm run start",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx src/scripts/migrateData.ts",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f app",
    "docker:seed": "docker compose exec app npx tsx src/scripts/migrateData.ts"
  },
  "engines": {
    "node": ">=20.11.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^7.1.0",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "@types/pg": "^8.16.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "4.21.2",
    "express-rate-limit": "^8.2.1",
    "flatpickr": "^4.6.13",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "pg": "^8.18.0",
    "sharp": "^0.34.5",
    "tsx": "^4.21.0",
    "uuid": "^11.1.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^18.19.130",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "copyfiles": "^2.4.1",
    "nodemon": "^3.1.9",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.1.6",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0"
  }
}
